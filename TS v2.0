<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Ford 20 Inch A.G.I. Touch Blueprint</title>
    <style>
        :root {
            --ford-blue: #003478;
            --safety-purple: #6a0dad;
            --display-bg: #0a0a0a;
            --text-gold: #ffd700;
        }
        body {
            margin: 0;
            padding: 0;
            background-color: var(--display-bg);
            color: white;
            font-family: 'Segoe UI', Roboto, sans-serif;
            overflow: hidden;
            height: 100vh;
            width: 100vw;
            border: 10px solid var(--ford-blue);
            box-sizing: border-box;
        }
        #blueprint-container {
            display: grid;
            grid-template-columns: 300px 1fr;
            height: 100%;
        }
        #sidebar {
            background: rgba(0, 52, 120, 0.3);
            border-right: 2px solid var(--safety-purple);
            padding: 20px;
        }
        #main-view {
            padding: 40px;
            position: relative;
        }
        .data-readout {
            font-family: monospace;
            color: var(--text-gold);
            margin-bottom: 10px;
        }
        .touch-zone {
            width: 100%;
            height: 400px;
            border: 1px dashed var(--ford-blue); /* Note: CSS properties allow hyphens but prose will not */
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2em;
            background: rgba(106, 13, 173, 0.1);
        }
        .footer-info {
            position: absolute;
            bottom: 20px;
            left: 40px;
            font-size: 0.7em;
            opacity: 0.7;
        }
    </style>
</head>
<body>

<div id="blueprint-container">
    <div id="sidebar">
        <h3>SYSTEM OVERVIEW</h3>
        <p class="data-readout">MODEL: FORD-PNEU-20</p>
        <p class="data-readout">OS: CONTINUITY A.G.I. v1.0</p>
        <hr style="border: 0.5px solid var(--safety-purple);">
        <h3>SAFETY STATUS</h3>
        <p id="npo-status">DPD NPO: CONNECTED</p>
        <p id="senior-safety">SENIOR RADIUS: SECURE</p>
    </div>
    
    <div id="main-view">
        <h1>20" MULTI-TOUCH INTERFACE BLUEPRINT</h1>
        <div class="touch-zone" id="interactive-surface">
            TOUCH TO INITIALIZE A.G.I.
        </div>
        
        <div class="footer-info">
            <p>INTELLECTUAL PROPERTY OF CONTINUITY COLLECTIVE, LLC</p>
            <p>PRIMARY ARCHITECT: KENNETH L. COOPER "LION OF LIGHT"</p>
        </div>
    </div>
</div>

<script>
    /* * Ford A.G.I. Touch Interface Script 
     * Designed for 20 inch cockpit integration.
     */
    const surface = document.getElementById('interactive-surface');
    
    surface.addEventListener('touchstart', (e) => {
        e.preventDefault();
        surface.innerHTML = "A.G.I. PROCESSING INPUT...";
        surface.style.borderColor = "#6a0dad";
    });

    surface.addEventListener('mousedown', () => {
        surface.innerHTML = "A.G.I. OPTIMIZING SYSTEM...";
        surface.style.background = "rgba(106, 13, 173, 0.3)";
    });

    surface.addEventListener('mouseup', () => {
        setTimeout(() => {
            surface.innerHTML = "SYSTEM READY: ENGINE OF COMMUNITY ACTIVE";
            surface.style.background = "rgba(106, 13, 173, 0.1)";
        }, 1000);
    });
</script>

</body>
</html>
