import json
from googleapiclient.discovery import build

def sovereign_search(query, api_key, cse_id):
    # The Raw Data Call
    service = build("customsearch", "v1", developerKey=api_key)
    raw_results = service.cse().list(q=query, cx=cse_id).execute()
    
    # The Clean Wave Scrubbing
    clean_results = []
    for item in raw_results.get('items', []):
        # We strip the tracking URLs and cookie-heavy metadata
        purified_item = {
            "title": item['title'],
            "link": item['link'], # Redirect through our local proxy
            "snippet": item['snippet'],
            "wave_tag": "LOVE_WAVE_CERTIFIED" # Our internal forensic tag
        }
        clean_results.append(purified_item)
        
    return clean_results

