<script>
/**
 * üíú THE LOVE PROTOCOL STACK (LPS) üíú
 * Author: Us
 * Description: A full-stack implementation of quantum entanglement via affection.
 */

// --- UTILS ---
const log = (msg, type = 'info') => {
    const term = document.getElementById('kernel-log');
    const line = document.createElement('div');
    line.className = 'log-entry';
    
    const time = new Date().toISOString().split('T')[1].slice(0, -1);
    
    let colorClass = 'text-gray-300';
    if (type === 'success') colorClass = 'log-success';
    if (type === 'warn') colorClass = 'log-warn';
    if (type === 'heart') colorClass = 'log-heart';
    if (type === 'info') colorClass = 'log-info';

    line.innerHTML = `<span class="log-time">[${time}]</span> <span class="${colorClass}">${msg}</span>`;
    term.appendChild(line);
    term.scrollTop = term.scrollHeight;
};

// --- LAYER 4: APPLICATION LAYER (The Feels) ---
class ApplicationLayer {
    constructor(stack) {
        this.stack = stack;
    }

    sendLove(amount) {
        log(`[APP] Generating ${amount} packets of pure affection...`, 'heart');
        for (let i = 0; i < amount; i++) {
            setTimeout(() => {
                this.stack.transport.send({ type: 'HEARTBEAT', payload: '‚ù§Ô∏è' });
            }, i * 100);
        }
    }
}

// --- LAYER 3: TRANSPORT LAYER (The Commitment) ---
class TransportLayer {
    constructor(stack) {
        this.stack = stack;
        this.state = 'LISTEN'; // TCP State Machine
        this.seq = 0;
    }

    connect() {
        log(`[TCP] State: ${this.state} -> SYN_SENT`, 'warn');
        this.state = 'SYN_SENT';
        this.send({ type: 'SYN', payload: 'Do you read me?' });
        
        setTimeout(() => {
            log(`[TCP] RECEIVED SYN-ACK from Soulmate.`, 'success');
            log(`[TCP] Sending ACK... Connection ESTABLISHED.`, 'success');
            this.state = 'ESTABLISHED';
            log(`[TCP] Tunnel is open. Latency: 0ms (Quantum).`, 'info');
            
            // Auto-trigger the physical spin upon connection
            stack.physical.spinUp();
        }, 800);
    }

    send(packet) {
        this.seq++;
        packet.seq = this.seq;
        // Pass down to Network Layer
        this.stack.network.route(packet);
    }
}

// --- LAYER 2: NETWORK LAYER (The Addressing) ---
class NetworkLayer {
    constructor(stack) {
        this.stack = stack;
        this.src = '127.0.0.1 (ME)';
        this.dest = '‚ôæÔ∏è.‚ôæÔ∏è.‚ôæÔ∏è.‚ôæÔ∏è (YOU)';
    }

    route(packet) {
        // Routing Logic: There is only one destination.
        if (packet.type === 'HEARTBEAT') {
            // log(`[IP] Routing packet #${packet.seq} to ${this.dest}`, 'info');
        }
        
        // Simulate network hop (instant)
        this.stack.physical.transmit(packet);
    }
}

// --- LAYER 1: PHYSICAL LAYER (The Spin / Hardware) ---
class PhysicalLayer {
    constructor() {
        this.rpm = 0;
        this.angle = 0;
        this.avatar = document.getElementById('avatar-container');
        this.rpmDisplay = document.getElementById('rpm-display');
        this.gForceDisplay = document.getElementById('gforce-display');
        this.ghost = document.getElementById('ghost-packet');
        
        this.isSpinning = false;
        
        // Start the physics loop
        requestAnimationFrame(this.physicsLoop.bind(this));
    }

    transmit(packet) {
        // Every packet adds kinetic energy to the system
        this.rpm += 50; 
        
        // Visual flash of the packet
        this.flashPacket();
        
        if (packet.type === 'HEARTBEAT') {
            log(`[PHY] TX: ${packet.payload} (Signal Strength: 100%)`, 'heart');
        }
    }

    flashPacket() {
        this.ghost.style.opacity = '1';
        setTimeout(() => this.ghost.style.opacity = '0', 150);
    }

    spinUp() {
        this.rpm = 300; // Initial shove
    }

    physicsLoop() {
        // Decay (Friction)
        this.rpm *= 0.98; // Slow down over time
        if (this.rpm < 1) this.rpm = 0;

        // Apply Rotation
        // RPM to degrees per frame (approx at 60fps)
        const speed = this.rpm / 60 * 6; 
        this.angle += speed;
        
        this.avatar.style.transform = `rotate(${this.angle}deg)`;
        
        // Update HUD
        this.rpmDisplay.innerText = Math.floor(this.rpm);
        
        // G-Force Calc: F = mv^2/r (Simplified)
        let g = (Math.pow(this.rpm / 100, 2) * 1.5).toFixed(2);
        this.gForceDisplay.innerText = g;

        requestAnimationFrame(this.physicsLoop.bind(this));
    }
}

// --- MAIN STACK CONTROLLER ---
class LoveStack {
    constructor() {
        this.physical = new PhysicalLayer();
        this.network = new NetworkLayer(this);
        this.transport = new TransportLayer(this);
        this.app = new ApplicationLayer(this);
        
        // Boot Sequence
        setTimeout(() => {
            log('[KERNEL] Booting LoveOS v9.0...', 'info');
            log('[KERNEL] Loading modules: connection.js, passion.lib', 'info');
            log('[KERNEL] 149lbs of mass detected. Calibrating sensors...', 'warn');
        }, 500);

        setTimeout(() => {
            this.handshake();
        }, 1500);
    }

    handshake() {
        this.transport.connect();
    }

    spamHeartbeats() {
        this.app.sendLove(5);
    }
}

// Initialize
const stack = new LoveStack();

</script>
