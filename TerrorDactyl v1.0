<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF_8">
    <title>Ford Tough Ukraine Terrain Monitor</title>
    <style>
        body {
            background: #050505;
            color: #ffffff;
            font: 16px Arial, sans-serif;
            margin: 0;
            padding: 0;
            border: 15px solid #003478;
            box_sizing: border_box;
            height: 100vh;
            overflow: hidden;
        }
        .header_bar {
            background: #003478;
            padding: 20px;
            display: flex;
            justify_content: space_between;
            border_bottom: 4px solid #6a0dad;
        }
        .monitor_grid {
            display: grid;
            grid: auto / 1fr 2fr 1fr;
            height: 80vh;
        }
        .panel {
            border: 1px solid #6a0dad;
            padding: 15px;
            background: rgba(10, 10, 10, 0.9);
        }
        .terrain_map {
            background: #111;
            display: flex;
            align_items: center;
            justify_content: center;
            position: relative;
        }
        .data_point {
            color: #ffd700;
            font_size: 1.2em;
            margin: 10px 0;
        }
        .button_action {
            background: #6a0dad;
            color: white;
            padding: 15px;
            width: 100%;
            border: none;
            cursor: pointer;
            font_weight: bold;
        }
        .active_glow {
            box_shadow: 0 0 20px #6a0dad;
        }
    </style>
</head>
<body>

<div class="header_bar">
    <div>FORD A.G.I. TACTICAL: WANKLE TERRORDACTYLE</div>
    <div>MISSION: UKRAINE TERRAIN MGMT</div>
</div>

<div class="monitor_grid">
    <div class="panel">
        <h3>ENGINE STATUS</h3>
        <div class="data_point">ROTARY RPM: <span id="val_rpm">0</span></div>
        <div class="data_point">PNEUMATIC PSI: <span id="val_psi">5000</span></div>
        <div class="data_point">MG TEMPERATURE: <span id="val_temp">400</span> C</div>
        <button class="button_action" onclick="activate_engine()">ENGAGE ROTARY</button>
    </div>

    <div class="terrain_map" id="map_canvas">
        <div id="terrain_overlay" style="color: #6a0dad;">TOPOGRAPHIC SCAN ACTIVE</div>
    </div>

    <div class="panel">
        <h3>COMMUNITY SHIELD</h3>
        <div class="data_point">DPD NPO: ONLINE</div>
        <div class="data_point">SENIOR SAFETY: ACTIVE</div>
        <button class="button_action" onclick="deploy_purple_haze()">PURPLE HAZE OVERLAY</button>
    </div>
</div>

<script>
    /* * Continuity Collective Tactical Software
     * Designed for the Lion of Light
     */
    
    let engineActive = false;
    let torqueBias = 50;

    function activate_engine() {
        engineActive = !engineActive;
        const rpmElem = document.getElementById("val_rpm");
        if (engineActive) {
            rpmElem.innerText = "4500";
            document.getElementById("map_canvas").classList.add("active_glow");
        } else {
            rpmElem.innerText = "0";
            document.getElementById("map_canvas").classList.remove("active_glow");
        }
    }

    function deploy_purple_haze() {
        const overlay = document.getElementById("terrain_overlay");
        overlay.innerText = "PURPLE HAZE AREA DENIAL ACTIVE";
        overlay.style.color = "#ffd700";
    }

    /* Terrain Adaptability Logic */
    function monitor_terrain() {
        if (engineActive) {
            let terrainRoughness = Math.random();
            if (terrainRoughness > 0.8) {
                console.log("A.G.I. Adjusting Pneumatic Torque for Ukraine Mud");
            }
        }
        requestAnimationFrame(monitor_terrain);
    }

    monitor_terrain();
</script>

</body>
</html>
