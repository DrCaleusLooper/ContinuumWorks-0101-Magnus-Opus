<body>

    <div class="container">
        <div class="status-light" id="status"></div>
        <h1>Silverado EV<br>Spectrum Core</h1>

        <div class="control-group">
            <label>COLOR TEMPERATURE (KELVIN)</label>
            <input type="range" id="tempSlider" min="0" max="100" value="50">
            <span id="temp-display">6500K</span>
        </div>

        <button class="btn-main" id="connectBtn">LINK TO TRUCK</button>
    </div>

    <script>
        const connectBtn = document.getElementById('connectBtn');
        const statusLight = document.getElementById('status');
        const tempSlider = document.getElementById('tempSlider');
        const tempDisplay = document.getElementById('temp-display');
        let device, server, service, char;

        // Map slider 0-100 to Kelvin 2500-10000 range
        function updateKelvin(val) {
            let k;
            let label;
            if (val < 20) { k = "2500K"; label = "AMBER (FOG)"; tempDisplay.style.color = "#ff8c00"; }
            else if (val < 40) { k = "4000K"; label = "WARM WHITE"; tempDisplay.style.color = "#fffacd"; }
            else if (val < 60) { k = "6500K"; label = "DAYLIGHT"; tempDisplay.style.color = "#ffffff"; }
            else if (val < 80) { k = "8000K"; label = "COOL BLUE"; tempDisplay.style.color = "#00bfff"; }
            else { k = "UV-A"; label = "PURPLE HAZ"; tempDisplay.style.color = "#8A2BE2"; }
            
            tempDisplay.innerText = k;
            return val; // In real usage, send byte value
        }

        tempSlider.addEventListener('input', (e) => {
            const val = e.target.value;
            const data = updateKelvin(val);
            if(char) {
                // Send command to BLE Controller
                // Protocol: [0x01, value]
                const payload = new Uint8Array([0x01, val]);
                char.writeValue(payload).catch(err => console.log(err));
            }
        });

        connectBtn.addEventListener('click', async () => {
            try {
                // Request Bluetooth Device (Standard UART Service UUID for ESP32/Nordic)
                device = await navigator.bluetooth.requestDevice({
                    acceptAllDevices: true,
                    optionalServices: ['6e400001-b5a3-f393-e0a9-e50e24dcca9e'] 
                });

                statusLight.style.backgroundColor = "yellow";
                server = await device.gatt.connect();
                service = await server.getPrimaryService('6e400001-b5a3-f393-e0a9-e50e24dcca9e');
                char = await service.getCharacteristic('6e400002-b5a3-f393-e0a9-e50e24dcca9e');

                statusLight.classList.add('connected');
                connectBtn.innerText = "LINK ACTIVE";
                connectBtn.style.borderColor = "#00FF00";
                connectBtn.style.color = "#00FF00";

            } catch (error) {
                console.log("Connection Failed:", error);
                alert("Scan Failed or Cancelled. Ensure Bluetooth is ON.");
            }
        });

    </script>
</body>
</html>

