    <script>
        async function executeTransfer() {
            const recipient = document.getElementById('recipient').value;
            const amount = document.getElementById('amount').value;
            
            if(!recipient || !amount) {
                window.ghostSystem.updateUI("ERROR: Null Input Detected.");
                return;
            }

            window.ghostSystem.updateUI(`Scanning Target: ${recipient}...`);
            
            // Execute the Handshake
            const result = await window.ghostSystem.initiateHandshake(recipient, amount);
            
            if(result.status === "FLOW_STATE") {
                window.ghostSystem.updateUI("SHA-512 ANCHOR SECURED.");
                window.ghostSystem.updateUI(`TX ID: ${result.hash.substring(0,16)}...`);
                window.ghostSystem.updateUI("TRANSFER COMPLETE. ENTROPY: 0.0%");
            }
        }
    </script>
