    <script>
        // PURPLE PRIDE PROTOCOL V1.1
        // UTILITY: LOGGING
        function log(message) {
            const consoleDiv = document.getElementById('simulation-console');
            const entry = document.createElement('div');
            entry.innerText = `> ${message}`;
            consoleDiv.appendChild(entry);
            consoleDiv.scrollTop = consoleDiv.scrollHeight;
        }

        // CLASS: QUARK
        class Quark {
            constructor(type, origin) {
                this.type = type; // 'Matter' or 'Anti-Matter'
                this.origin = origin; // 'External' or 'Vacuum'
                this.id = Math.random().toString(36).substr(2, 9);
            }
        }

        // CLASS: THE MOBIUS CAPACITOR
        class MobiusCapacitor {
            constructor() {
                this.storedEnergy = [];
                this.informationStream = [];
                this.eventHorizonTorque = 9.8e9; // Theoretical Limit
            }

            interact(quarkPair) {
                log(`[EVENT] Incoming Mass System Detected: ID ${quarkPair[0].id} / ${quarkPair[1].id}`);
                
                // Phase 1: The Grab
                const anchorQuark = quarkPair[0];
                const projectileQuark = quarkPair[1];
                log(`[ACTION] Infinite Curl engages. Anchoring Quark ${anchorQuark.id}. Spinning Quark ${projectileQuark.id}.`);

                // Phase 2: The Split & Poof (Vacuum Creation)
                log(`[CRITICAL] Tension exceeds Gluon Field strength.`);
                log(`[EFFECT] "POOF" Event Triggered. Vacuum Energy manifests new pair.`);
                
                const vacuumQuark1 = new Quark('Matter', 'Vacuum');
                const vacuumQuark2 = new Quark('Anti-Matter', 'Vacuum');

                // Phase 3: The Sorting (Vector Assignment)
                
                // Vector 1: Storage (Fuel)
                this.storedEnergy.push(anchorQuark, vacuumQuark1);
                log(`[RESULT] Vector 1 (Storage): Quark ${anchorQuark.id} + Vacuum Quark ${vacuumQuark1.id} absorbed into Capacitor.`);

                // Vector 2: Information (Light)
                this.informationStream.push(projectileQuark, vacuumQuark2);
                log(`[RESULT] Vector 2 (Information): Quark ${projectileQuark.id} + Vacuum Quark ${vacuumQuark2.id} ejected as Data.`);

                return {
                    fuel: this.storedEnergy.length,
                    data: this.informationStream.length
                };
            }
        }

        // SIMULATION RUNNER
        function runTrial() {
            document.getElementById('simulation-console').innerHTML = ''; // Clear
            log("Initializing Continuity Collective Environment...");
            
            const Engine = new MobiusCapacitor();
            
            // Create Input
            const inputPair = [new Quark('Matter', 'External'), new Quark('Anti-Matter', 'External')];
            
            // Execute
            setTimeout(() => {
                const status = Engine.interact(inputPair);
                log("------------------------------------------------");
                log(`[TRIAL COMPLETE]`);
                log(`Total Quarks in System: 4`);
                log(`Quarks Stored (Fuel): ${status.fuel}`);
                log(`Quarks Ejected (Data): ${status.data}`);
                log(`System Status: STABLE`);
                log(`Logic Verification: CONFIRMED`);
            }, 500);
        }

        // CRYPTOGRAPHIC ANCHOR SIMULATION (SHA-512 LOGIC)
        async function generateHash() {
            const content = document.body.innerText;
            const encoder = new TextEncoder();
            const data = encoder.encode(content);
            const hashBuffer = await crypto.subtle.digest('SHA-512', data);
            const hashArray = Array.from(new Uint8Array(hashBuffer));
            const hashHex = hashArray.map(b => b.toString(16).padStart(2, '0')).join('');
            
            log("------------------------------------------------");
            log("GENERATING CRYPTOGRAPHIC ANCHOR...");
            log(`SHA-512 SIGNATURE: ${hashHex.substring(0, 32)}...[TRUNCATED]`);
            log("Doc Timestamped & Sealed.");
        }

        // SET TIMESTAMP ON LOAD
        document.getElementById('timestamp').innerText = new Date().toUTCString();

    </script>
